{
  "name": "Link Selector",
  "description": "select hyperlinks by using hotkeys",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Select hyperlinks"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*",
                  "https://*/*"],
      // "css": ["mystyles.css"],

      "js": ["jquery.js","script.js"]
    }
  ],
  "manifest_version": 2
}